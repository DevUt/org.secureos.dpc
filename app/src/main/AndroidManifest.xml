<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.secureos.dpc">

    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.FirstTestDPM">
        <activity
            android:name="org.secureos.dpc.permissionManagement.PermissionActivity"
            android:exported="false" />
        <activity
            android:name="org.secureos.dpc.packageManagement.PackageActivity"
            android:exported="false"
            android:parentActivityName="org.secureos.dpc.MainActivity" /> <!-- <activity -->
        <!-- android:name=".permissionManagement.PermissionActivity" -->
        <!-- android:exported="false" -->
        <!-- android:parentActivityName=".MainActivity" /> -->
        <activity
            android:name="org.secureos.dpc.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="org.secureos.dpc.deviceAdmin.DeviceAdmin"
            android:exported="false"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>

            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
        </receiver>
    </application>

</manifest>